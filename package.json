{
  "name": "file-stager",
  "displayName": "File Stager",
  "description": "Copy files and folders from VS Code Explorer to the OS clipboard.",
  "version": "1.0.0",
  "publisher": "Federicowitz",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "file-stager.copyFilesToOS",
        "title": "Copy Files (System Clipboard)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "file-stager.copyFilesToOS",
          "group": "navigation",
          "when": "explorerViewletVisible"
        }
      ]
    },
    "keybindings": [
      {
        "command": "file-stager.copyFilesToOS",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "filesExplorerFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "typescript": "^5.1.3",
    "@vscode/vsce": "^2.19.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Federicowitz/file-stager"
  }
}